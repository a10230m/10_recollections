
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="box">
        <h3 class="bold">Information</h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-2">
      <div class='profileimage'>
        <%= image_tag @user.get_profile_image(120,120), class: "rounded-circle" %>
      </div>
    </div>
    <div class="col-6 d-flex align-items-center">
      <h3 class="bold"><%= @user.name %></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
   <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <i class="fa-brands fa-ideal"></i> id
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= @user.id %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <i class="fa-solid fa-user"></i> name
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= @user.name %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <i class="fa-solid fa-cake-candles"></i> birthday
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= @user.birthdate %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <i class="fa-solid fa-circle-info"></i> introduction
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= @user.introduction %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <i class="fa-solid fa-envelope"></i> email
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= @user.email %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box"></div>
    </div>
    <div class="col-8">
      <div class="box">
        <i class="fa-solid fa-image fa-1"></i>

        <%= link_to userphotos_admin_user_path(@user.id), class: "link2" do %>
          <span style="color: gray;", onMouseOver="this.style.color='#cc7eb1'", onMouseOut="this.style.color='gray'", class="link">
             PHOTO
          </span>
        <% end %>
        <span style="color: gray;"><<%= @user.photo_images.count %>photos></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box"></div>
    </div>
    <div class="col-8">
      <div class="box">
        <i class="fa-solid fa-images fa-1"></i>
        <%= link_to useralbums_admin_user_path(@user.id), class: "link2" do  %>
          <span style="color: gray;", onMouseOver="this.style.color='#cc7eb1'", onMouseOut="this.style.color='gray'", class="link">
             ALBUM
          </span>
        <% end %>
        <span style="color: gray;"><<%= @user.albums.count %>albums></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box">
        <p>会員ステータス</p>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <% if @user.is_active %>
          <p class="font-weight-bold text-success">有効</p>
        <% else %>
          <p>退会</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box"></div>
    </div>
    <div class="col-8">
      <%= link_to "edit", edit_admin_user_path(@user), class: "btn btn-outline-lightgreen" %>
    </div>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <div class="box"></div>
    </div>
    <div class="col-8">
      <%= link_to "USER一覧へ戻る", admin_users_path, class: "btn btn-outline-lightgreen" %>
    </div>
  </div>

</div>


