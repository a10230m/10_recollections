<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <div class="box">
        <h2 class="text-left">
          <strong><%= @user.name %></strong>さんの会員情報編集<br><br>
        </h2>
      </div>
    </div>
  </div>

  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-brands fa-ideal"></i>
          <%= f.label :id %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :id, autofocus: true, autocomplete: "id" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-user"></i>
          <%= f.label :name %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-image-portrait"></i>
          <%= f.label :profile_image %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-cake-candles"></i>
          <%= f.label :birthdate %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.date_field :birthdate %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-circle-info"></i>
          <%= f.label :introduction %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :introduction %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-envelope"></i>
          <%= f.label :email %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :email %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-circle-question"></i>
          <%= f.label :会員ステータス %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.radio_button "is_active", "true", id: "radio1" %>
        　<label for="radio1">有効</label>
        <%= f.radio_button "is_active", "false", id: "radio2" %>
          <label for="radio2">退会</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3"></div>
    <div class="col-8">
      <div class="box">
        <%= f.submit "UPDATE", class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3"></div>
    <div class="col-8">
      <div class="box">
        <%= link_to "back", admin_user_path(@user), class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

