<div class="container">
  <h4><strong><%= @user.name %></strong>さんの会員情報編集</h4>
</div>
<br>
<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>

<div class="container">
  <div class="row row no-gutters form-group">
    <%= f.label :name, class: "col-3" %>
    <%= f.text_field :name, class: "col-2" %>
  </div>


  <div class="row row no-gutters form-group">
    <%= f.label :birthday, class: "col-3" %>
    <%= f.text_field :birthdate, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :introduction, class: "col-lg-3" %>
    <%= f.text_field :introduction, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :email, class: "col-3" %>
    <%= f.text_field :email, class: "col-2" %>
  </div>

  <div class="row row no-gutters form-group">
    <%= f.label :会員ステータス, class: "col-3" %>
    <div class="col-3">
      <%= f.radio_button "is_active", "true", id: "radio1" %>
      　<label for="radio1">有効</label>
      <%= f.radio_button "is_active", "false", id: "radio2" %>
        <label for="radio2">退会</label>
    </div>
  </div>

  <div class="row row no-gutters form-group">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  </div>
</div>


<% end %>
<div class="container">
  <div class="row">
      <div class="col-3"></div>
      <div class="col-3"><%= link_to "back", admin_user_path(@user), class: "btn btn-success" %></div>
    </div>
  </div>
<br>
<br>