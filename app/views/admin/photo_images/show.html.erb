<div class="container">
  <div class="photo">
    <div class="row">
      <div class="col"></div>
      <div class="col-10">
        <div class="image">
          <% if @photo_image.image.attached? %>
            <%= image_tag @photo_image.image, class: 'img-fluid' %>
          <% end %>
        </div>
      </div>
      <div class="col"></div>
    </div>
    <div class="row">
      <div class="col"></div>
      <div class="col-10">
        <div class="flex">
          <div class="comments">
            <i class="fa-solid fa-comment" style="color: #60a39b;"></i> <%= @photo_image.photo_comments.count %>
          </div>
          <div class="edit-delete">
            <%= link_to admin_photo_image_path(@photo_image.id), method: :delete, class: "link" do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
            <br>
          </div>
        </div>
      </div>
      <div class="col"></div>
    </div>
    <div class="row">
      <div class="col"></div>
      <div class="col-10">
        <div class="title">
          <% if @photo_image.photo_title.present? %>
            <%= @photo_image.photo_title %>
          <% else %>
            <div class="blank"></div>
          <% end %>
        </div>
        <div class="cap">
          <% if @photo_image.photo_caption.present? %>
            <%= @photo_image.photo_caption %>
          <% else %>
            <div class="blank"></div>
          <% end %>
        </div>
        <div class="flex">
          <div class="name">
            <%= image_tag @photo_image.user.get_profile_image(20,20) %>
            <%= @photo_image.user.name %>
          </div>
          <div class="time">
            <%= @photo_image.created_at.strftime('%Y/%m/%d %H:%M') %>
          </div>
        </div>
      </div>
      <div class="col"></div>
    </div>
    <div class="row">
      <div class="col"></div>
      <div class="col-10">
        <div class="comment-good">
          <div class="text-comment">comment</div>
          <% @photo_image.photo_comments.each do |photo_comment| %>
          <div class="row">
            <div class="col-2">
              <div class="box">
                <%= image_tag photo_comment.user.get_profile_image(20,20) %><%= photo_comment.user.name %>
              </div>
            </div>
            <div class="col-5">
              <div class="box">
                <%= photo_comment.comment %>
              </div>
            </div>
            <div class="col-3">
              <div class="box">
                <%= photo_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
              </div>
            </div>
            <div class="col-1">
              <div class="box">
                <%= link_to admin_photo_image_photo_comment_path(photo_comment.photo_image, photo_comment), method: :delete, class: "link" do %>
                  <i class="fa-solid fa-trash-can"></i>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="col-10">
    <%= link_to "PHOTO ALLへ戻る", admin_photo_images_path, class: "btn btn-outline-lightgreen" %>
  </div>
</div>