<div class="container">
  <div class="row justify-content-between">
    <div class="col-2">
      <h3>Notice</h3>
    </div>
    <div class="col-3">
      
      <%= link_to destroy_all_notifications_path, method: :delete do %>
          <i class="fas fa-trash size"></i>全削除
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="box">
        <% if @notifications.exists? %>
          <div class="users-index">
              <%= render @notifications %>
          </div>
        <% else %>
          <p>通知はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
