<% visiter = notification.visiter %>
<% photo_image = notification.photo_image %>
<% album_photo_image = notification.album_photo_image %>
<div class="user-view clearfix ">
  <div class="box">
    <%= link_to user_path(notification.visiter) do %>
      <%= image_tag visiter.get_profile_image(20,20), class: "rounded-circle" %>
    <% end %>
    <%= notification_form(notification) %><span class="moderate-font"><%= "（#{time_ago_in_words(notification.created_at)}）" %></span>
    <br>
    <% if !@comment.nil? %>
      <p class="moderate-font text-center" style="color: #008075;"><%= @comment %></p>
    <% end %>
  </div>
</div>