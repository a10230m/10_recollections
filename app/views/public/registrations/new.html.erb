<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="sign_up-box">
        <h2 class="signup">SIGNUP</h2>
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <i class="fa-solid fa-user"></i>
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
          <i class="fa-solid fa-image-portrait"></i>
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="field">
          <i class="fa-solid fa-envelope"></i>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <i class="fa-solid fa-cake-candles"></i>
          <%= f.label :birthdate %><span style="color:#a9a9a9;">（任意）</span>
          <%= f.date_field :birthdate %>
        </div>

        <div class="field">
          <i class="fa-solid fa-circle-info"></i>
          <%= f.label :introduction %><span style="color:#a9a9a9;">（任意）</span>
          <%= f.text_field :introduction, id: "introduction", placeholder: "about me" %>
        </div>


        <div class="field">
          <i class="fa-solid fa-key"></i>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <i class="fa-solid fa-key"></i>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success w-50" %>
        </div>
        <% end %>

        <div class="ctionsr">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

