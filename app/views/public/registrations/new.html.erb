<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <div class="box">
        <h2 class="text-left">SIGNUP</h2>
      </div>
    </div>
  </div>

<%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
    </div>
    <div class="col-8">
      <div class="box">
        <%= render "public/shared/error_messages", resource: resource %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-user"></i>
          <%= f.label :name %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-image-portrait"></i>
          <%= f.label :profile_image %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-envelope"></i>
          <%= f.label :email %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-cake-candles"></i>
          <%= f.label :birthdate %><span style="color:#a9a9a9;">（任意）</span>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.date_field :birthdate %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-circle-info"></i>
          <%= f.label :introduction, placeholder: "about me" %><span style="color:#a9a9a9;">（任意）</span>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :introduction, id: "introduction", placeholder: "about me" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-key"></i>
          <%= f.label :password %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-key"></i>
          <%= f.label :password_confirmation %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.submit "新規登録", class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
    </div>
    <div class="col-8">
      <div class="box">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>

