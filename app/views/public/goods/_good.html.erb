<% if photo_comment.gooded_by?(current_user) %>
  <%= link_to photo_image_photo_comment_goods_path(photo_image.id, photo_comment.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-thumbs-up" style="color: #60a39b;"></i>
  <% end %>
  <%= photo_comment.goods.count %>
<% else %>
  <%= link_to photo_image_photo_comment_goods_path(photo_image.id, photo_comment.id), method: :post, remote: true do %>
    <i class="fa-solid fa-thumbs-up" style="color:#d3d3d3;"></i>
  <% end %>
  <%= photo_comment.goods.count %>
<% end %>