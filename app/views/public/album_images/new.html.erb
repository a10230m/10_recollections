

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6 border rounded-pill p-3">
        <div class="album_new">
          <h2 class="text-center">ALBUM</h2><br>
            <%= form_with model: @album_image, local: true  do |f| %>

            <%= f.file_field :images, multiple: true %><br><br>
            <h4>ALBUM title　  　<%= f.text_field :album_title %></h4><br>
            <h4>ALBUM caption　<%= f.text_area :album_caption %></h4>
            <div class="line"></div>
            <h2 class="text-center">
              <%= f.submit 'UPLOAD', class: "btn btn-success" %>
            </h2>

          <% end %>
        </div>
      </div>
    <div class="col-md-3"></div>
</div>
