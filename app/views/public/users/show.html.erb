
  <h4>User</h4>
    <i class="fa-solid fa-user"></i><%= @user.name %>
    <i class="fa-solid fa-cake-candles"></i><%= @user.birthdate %><br>
    <i class="fa-solid fa-circle-info"></i><%= @user.introduction %>
    <i class="fa-solid fa-envelope"></i><br>

    <div class="line"></div>
    <h4>
      <%= link_to "♡", favorites_user_path(@user) %>
    </h4>
    <div class="line"></div>
    

    <h4>
      <%= link_to "Photo All", userphotos_user_path(@user.id) %>
      <span><%= @user.photo_images.count %>件</span>
    </h4>



    <div class="row row no-gutters">
      <%= render 'public/photo_images/index', photo_images: @user.photo_images %>
    </div>

    <div class="line"></div>
    <h4>
      <%#= @user.name %>
      <%= link_to "ALBUM ALL", useralbums_user_path(@user.id) %>
      <span><%= @user.albums.count %>件</span>
    </h4>


    <div class="row row no-gutters">
      <%= render 'public/albums/index', albums: @user.albums %>
    </div>