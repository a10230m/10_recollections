
<div class="container">
  <h4>
    <strong>User／<%= image_tag @user.get_profile_image(30,30) %><%= @user.name %></strong>
  </h4>
</div>

<div class="container">
  <table class="table table-borderless">
    <thead>
      <tr>
        <th scope="col"><i class="fa-solid fa-user"></i>.name</th>
        <th scope="col"><i class="fa-solid fa-cake-candles"></i>.birthday</th>
        <th scope="col"><i class="fa-solid fa-circle-info"></i>.introduction</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(30,30) %>
          <%= @user.name %>
        </td>
        <td><%= @user.birthdate %></td>
        <td>@<%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="container">
  <div class="line"></div>
  <h4><%= link_to "♡", favorites_user_path(@user) %></h4>
  <div class="line"></div>
  <h4>
    <%= link_to "PHOTO", userphotos_user_path(@user.id) %>
    <span><%= @user.photo_images.count %>件</span>
  </h4>


  <div class="line"></div>
  <h4>
    <%= link_to "ALBUM", useralbums_user_path(@user.id) %>
    <span><%= @user.albums.count %>件</span>
  </h4>

</div>