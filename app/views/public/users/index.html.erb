<div class="container">
  <div class="row row no-gutters">
    <h4>User All</h4>
  </div>
</div>

<div class="container">
  <div class="row row no-gutters">
    <% @users.each do |user| %>
    <div class="col-10 ml-5">
      <table class="table table-striped text-center">
        <tbody>
          <tr>
            <td>
              <i class="fa-solid fa-user"></i>
                <%= link_to user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
            </td>
            <td>
              <i class="fa-solid fa-cake-candles"></i><%= user.birthdate %>
            </td>
            <td>
              <i class="fa-solid fa-circle-info"></i><%= user.introduction %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>

