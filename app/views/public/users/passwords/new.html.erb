<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <div class="box">
        <h2 class="text-left">Forgot your password?</h2>
      </div>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-11">
      <div class="box">
        <br>
        <%= render "publics/shared/error_messages", resource: resource %>
      </div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :email %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.submit "Send me reset password instructions", class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= render "public/shared/links" %>


