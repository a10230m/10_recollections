<div class="container">
  <br>
  <% if @user == current_user %>
    <h3 class="box">MY Photo<span class="count-font">　<<%= @photo_images_count %>photos></span></h3>
  <% else %>
    <h3 class="box"><%= @user.name %>'s Photo<span class="count-font">　<<%= @photo_images_count %>photos></span></h3>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <%= render 'public/photo_images/index', photo_images: @photo_images %>
  </div>
</div>
<div class="container">
  <% if @user == current_user %>
    <%= link_to "My pageへ戻る", user_path(@user.id), class: "btn btn-outline-lightgreen" %>
  <% else %>
    <%= link_to "#{@user.name}'s pageへ戻る", user_path(@user.id), class: "btn btn-outline-lightgreen" %>
  <% end %>
</div>