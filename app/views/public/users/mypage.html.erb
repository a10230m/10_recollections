<% if user_signed_in? && @user == current_user %>
  <h4>MY PAGE</h4>
  <%= link_to "EDIT", edit_users_path %><br>

  <i class="fa-solid fa-user"></i><%= @user.name %>
  <i class="fa-solid fa-cake-candles"></i><%= @user.birthdate %><br>
  <i class="fa-solid fa-circle-info"></i><%= @user.introduction %>
  <i class="fa-solid fa-envelope"></i><%= @user.email %><br>
<% end %>

<div class="line"></div>
<h4>
  <%= link_to "♡", favorites_user_path(@user) %>
</h4>

<%#= @user.name %>
<h4>
  <%= link_to "Photo All", userphotos_user_path(@user.id) %>
  <span><%= @photo_image_count %>件</span>
</h4>


<div class="row row no-gutters">
  <%= render 'public/photo_images/index', photo_images: @photo_images %>
</div>


<div class="line"></div>
<h4>
  <%= link_to "♡", album_favorites_user_path(@user) %>
</h4>

<h4>
  <%= link_to "ALBUM ALL", useralbums_user_path(current_user) %>
    <span><%= @user.albums.count %>件</span>
</h4>


<div class="row row no-gutters">
  <%= render 'public/albums/index', albums: @albums %>
</div>

