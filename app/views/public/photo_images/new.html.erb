<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <div class="box">
        <h2 class="text-left">PHOTO</h2>
      </div>
    </div>
  </div>

<div class="row">
    <div class="col-1"></div>
    <div class="col-md-11">
      <div class="box">
        <br>
        <% if @photo_image.errors.any? %>
          <%= @photo_image.errors.count %>件のエラーが発生しました<br>
          <% @photo_image.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <%= form_with model: @photo_image do |f| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-image"></i>
          <%= f.label :photo %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :title %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :photo_title %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :caption %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_area :photo_caption %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.submit 'UPLOAD', class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <% end %>

</div>



