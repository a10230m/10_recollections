<div class="container">
  <% if @photo_image.image.attached? %>
    <%= image_tag @photo_image.get_image(200, 100), size: '200x100' %>
  <% end %>
  <br>

  <div id="favorite_btn_<%= @photo_image.id %>">
    <%#= render 'public/favorites/favorite', photo_image: @photo_image %>
    <%= render partial: 'public/favorites/favorite', locals: {photo_image: @photo_image} %>
  </div>


  <p>Title:<%= @photo_image.photo_title %></p>
  <p>caption:<%= @photo_image.photo_caption %></p>
  <p>name:<%= @photo_image.user.name %></p>
  <%= @photo_image.created_at.strftime('%Y/%m/%d %H:%M') %>

  <div class="text-right">
    <% if @photo_image.user == current_user %>
      <%= link_to edit_photo_image_path(@photo_image.id) do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to photo_image_path(@photo_image.id), method: :delete do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    <% end %>
  </div>

  <div class="container">
    <p>コメント：<%= @photo_image.photo_comments.count %></p>
      <% @photo_image.photo_comments.each do |photo_comment| %>
      <!--<p>-->
        <%#= image_tag photo_comment.user.get_profile_image(100,100) %>
      <!--</p>-->
        <p>name:<%= photo_comment.user.name %></p>
        <p><%= photo_comment.comment %></p>
        <p>[<%= photo_comment.created_at.strftime('%Y/%m/%d') %>]</p>
        <% if photo_comment.user == current_user %>
          <%= link_to "削除", photo_image_photo_comment_path(photo_comment.photo_image, photo_comment), method: :delete %>
        <% end %>
      <% end %>

      <div>
        <%= form_with model: [@photo_image, @photo_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
  </div>


  <%= link_to "back",photo_images_path %>



</div>
