<div class="container">
  <% if @photo_image.image.attached? %>
    <%= image_tag @photo_image.get_image, size: '600x500' %>
  <% end %>
  <br>
  <% if @photo_image.favorited_by?(current_user) %>
    <%= link_to photo_image_favorites_path(@photo_image), method: :delete do %>
      <i class="fa-solid fa-heart"></i>
    <% end %>
    <%= @photo_image.favorites.count %>
  <% else %>
    <%= link_to photo_image_favorites_path(@photo_image), method: :post do %>
      <i class="fa-brands fa-gratipay"></i>
    <% end %>
    <%= @photo_image.favorites.count %>
  <% end %>


  <p>Title:<%= @photo_image.photo_title %></p>
  <p>caption:<%= @photo_image.photo_caption %></p>
  <p>name:<%= @photo_image.user.name %></p>
  <%= @photo_image.created_at.strftime('%Y/%m/%d %H:%M') %>

  <div class="text-right">
    <% if @photo_image.user == current_user %>
      <%= link_to edit_photo_image_path(@photo_image.id) do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to photo_image_path(@photo_image.id), method: :delete do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    <% end %>
  </div>

  <%= link_to "back",photo_images_path %>



</div>
