
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11">
      <div class="box">
        <h2 class="text-left">ALBUM</h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-11">
      <div class="box">
        <br>
        <% if @album.errors.any? %>
          <%= @album.errors.count %>件のエラーが発生しました<br>
          <% @album.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <%= form_with model: @album, url: albums_path, local: true do |f| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <i class="fa-solid fa-images"></i>
          <%= f.label :album %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.fields_for :album_photo_images do |child|%>
          <%= child.file_field :image, multiple: true %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :title %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_field :album_title %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :caption %>
        </div>
      </div>
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.text_area :album_caption %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
      <div class="box">
        <div class="field">
          <%= f.label :'共有USER' %>
        </div>
      </div>
    </div>
    <div class="col-8 d-flex align-items-end">
      <div class="box">
          <%= f.collection_check_boxes :user_ids, @users, :id, :name do |b| %>
            <%= b.check_box %>
            <%= b.text %>
          <% end %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-1"></div>
    <div class="col-md-3">
    </div>
    <div class="col-8">
      <div class="box">
        <%= f.submit 'UPLOAD', class: "btn btn-outline-lightgreen w-25" %>
      </div>
    </div>
  </div>
  <% end %>

</div>