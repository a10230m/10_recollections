<div class="container">
  <div class="row">
    <div class="col-4">
      <p>
        Title:<%= @album.album_title %><br>
        caption:<%= @album.album_caption %><br>
        <%= image_tag @album.user.get_profile_image(30,30) %>
        <%= @album.user.name %><br>
        <%= @album.created_at.strftime('%Y/%m/%d %H:%M') %><br>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <p class="text-right">
        <% if @album.user == current_user %>
          <%= link_to "edit", edit_album_path(@album.id) %>
          <%= link_to "delete", album_path(@album.id), method: :delete %>
        <% end %>
        <br>
      </p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row row no-gutters">
     <%= render 'public/album_photo_images/index', album_photo_images: @album.album_photo_images %>
  </div>
  <%= link_to "ALBUM ALL", albums_path(@album) %>へ<br>
  <% if @album.user == current_user %>
    <%= link_to "自分のalbum一覧", useralbums_user_path(@user) %>へ
  <% else %>
    <%= link_to "#{@user.name}のalbum一覧", useralbums_user_path(@user) %>へ
  <% end %>
</div>
